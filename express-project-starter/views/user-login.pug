extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)

  form(class='login-forms' action='/users/login' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Email Address', 'email', email)
    +field('Password', 'password', null, 'password')
    div(class='py-4')
      button(type='submit' id= 'login' class='btn btn-login') Login
      a(href='/' id= 'cancel' class='cancel-login') Cancel
    div
      p: a(href='/users/register') Don't have an account?
