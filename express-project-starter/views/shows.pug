extends layout.pug

block content
    body
        .show-container
            each show in shows
                .individual-show-container
                    .showImage
                        a(target href=`/shows/${show.id}`)
                            img(src=show.image)
                    .showName= show.name
                    .showGenre= show.genre
                    .showCriticRating= show.criticRating
